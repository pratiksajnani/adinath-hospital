# EditorConfig - Uniform styling across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.js]
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# HTML files
[*.html]
indent_size = 4
max_line_length = 120

# CSS files
[*.css]
indent_size = 4

# Test files
[tests/**/*.js]
indent_size = 4

# Package files
[package*.json]
indent_size = 2

# Config files
[.eslintrc*]
indent_size = 2

[.prettierrc]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

