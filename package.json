{
  "name": "adinath-hospital",
  "version": "1.0.0",
  "description": "Adinath Hospital - Healthcare Website",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:links": "node tests/link-checker.js",
    "test:a11y": "playwright test --grep @accessibility",
    "serve": "npx serve -p 8080",
    "coverage": "jest --coverage",
    "lint": "eslint js/**/*.js --format stylish",
    "lint:fix": "eslint js/**/*.js --fix",
    "lint:report": "eslint js/**/*.js --format json -o test-results/eslint-report.json || true",
    "lint:css": "stylelint 'css/**/*.css'",
    "lint:css:fix": "stylelint 'css/**/*.css' --fix",
    "format": "prettier --write 'js/**/*.js' 'css/**/*.css'",
    "format:check": "prettier --check 'js/**/*.js' 'css/**/*.css'",
    "quality": "npm run lint && npm run format:check && npm run test:unit",
    "quality:fix": "npm run lint:fix && npm run format",
    "audit": "npm audit --audit-level=moderate",
    "analyze": "npm run lint:report && npm run coverage",
    "quality:report": "node scripts/quality-report.js",
    "duplicates": "jscpd js/ css/ --output test-results/jscpd",
    "duplicates:check": "jscpd js/ css/ --threshold 10",
    "metrics": "npm run quality:report",
    "complexity": "eslint js/**/*.js --format json | node -e \"const d=JSON.parse(require('fs').readFileSync(0,'utf8'));console.log('Complexity issues:',d.reduce((a,f)=>a+f.messages.filter(m=>m.ruleId?.includes('complexity')||m.ruleId?.includes('max-')).length,0))\"",
    "badges": "node scripts/generate-badges.js",
    "full-report": "npm run quality:report && npm run badges",
    "predeploy": "npm run quality",
    "deploy": "npm run predeploy && git push origin main",
    "ci": "npm run quality && npm run test:e2e",
    "validate": "npm run quality && echo '✅ All quality checks passed!'",
    "prepare": "husky || true",
    "security:scan": "grep -rE 'password.*=.*[\"'][^\"']{4,}[\"']' js/ docs/ README.md || echo '✅ No hardcoded passwords found'"
  },
  "lint-staged": {
    "js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "css/**/*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "axe-playwright": "^1.2.3",
    "broken-link-checker": "^0.7.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pratiksajnani/adinath-hospital.git"
  },
  "author": "Pratik Sajnani",
  "license": "MIT"
}
